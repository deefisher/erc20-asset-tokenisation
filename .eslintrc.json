{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true, // for test files
        "truffle/globals": true // same as "truffle/truffle": true
    },
    "extends": ["eslint:recommended", "plugin:chai-friendly/recommended"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2
    },
    "plugins": ["chai-friendly", "truffle"]
}
